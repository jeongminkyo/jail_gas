<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p class="notice"><%= message %></p>
  </div>
<% end %>
<h1>사택 검침장부</h1>
<br>
<div class="grid simple">
  <div class="grid-body">
    <div class="grid-body">
      <br>
      <h3>인원 수정</h3>
      <%= form_tag company_housing_update_path(:id => params[:id]), method: :post, class: 'form-inline search-user-form' do %>
        <table class="table table-hover no-more-tables" id="addTable" style="margin-top: 20px;">
          <thead>
          <tr>
            <th class="h-align">동</th>
            <th class="h-align">호수</th>
            <th class="h-align">이름</th>
            <th class="h-align">전화번호</th>
            <th class="h-align">전월검침</th>
            <th class="h-align">당월검침</th>
            <th class="h-align">사용량</th>
            <th class="h-align">가스,기화기 부담금</th>
            <th class="h-align">사용금</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><input type="text" class="form-control" placeholder="동" style="width:60px" value="<%= @company_housing.dong %>" name="dong" ></td>
            <td><input type="text" class="form-control" placeholder="호수" style="width:60px" value="<%= @company_housing.ho %>" name="ho"></td>
            <td><input type="text"  class="form-control" placeholder="이름" style="width:60px" value="<%= @company_housing.name %>" name="name"></td>
            <td><input type="text"  class="form-control" placeholder="전화번호" style="width:60px" value="<%= @company_housing.call %>" name="call"></td>
            <td><input type="text"  class="form-control" placeholder="전월검침" style="width:60px" value="<%= @company_housing.prev_month %>" name="prev_month"></td>
            <td><input type="text"  class="form-control" placeholder="당월검침" style="width:60px" value="<%= @company_housing.current_month %>" name="current_month"></td>
            <td></td>
            <td><%= number_with_delimiter(Config.find_by_id(7).cost) %></td>
            <td></td>
          </tr>
          </tbody>
        </table>
        <br>
        <button class="btn-sm" type="submit">적용</button>
      <% end %>
    </div>
  </div>
</div>

<script>
    $(document).ready(function () {
        $(".company_housing").addClass("active");
        $(".com_hou").find('li').first().addClass("active");
    })
</script>
