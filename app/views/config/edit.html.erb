<h1>설정 수정</h1>
<%= form_tag configs_edit_path, method: :post do %>
  <% flash.each do |type, message| %>
    <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <p class="notice"><%= message %></p>
    </div>
  <% end %>

  <table class="table table-hover no-more-tables" style="margin-top: 20px;">
    <thead>
    <tr>
      <th class="h-align">품목</th>
      <th class="h-align">가격</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td>10kg</td>
      <td><input type="text" name="gas_10kg", value="<%=Config.find_by_id(1).cost %>"></td>
    </tr>
    <tr>
      <td>20kg</td>
      <td><input type="text" name="gas_20kg", value="<%=Config.find_by_id(2).cost %>"></td>
    </tr><tr>
      <td>50kg</td>
      <td><input type="text" name="gas_50kg", value="<%=Config.find_by_id(3).cost %>"></td>
    </tr><tr>
      <td>산소</td>
      <td><input type="text" name="air", value="<%=Config.find_by_id(4).cost %>"></td>
    </tr><tr>
      <td>부탄</td>
      <td><input type="text" name="butane", value="<%=Config.find_by_id(5).cost %>"></td>
    </tr><tr>
      <td>아르곤</td>
      <td><input type="text" name="argon", value="<%=Config.find_by_id(6).cost %>"></td>
    </tr><tr>
      <td>가스,기화기 부담금</td>
      <td><input type="text" name="share", value="<%=Config.find_by_id(7).cost %>"></td>
    </tr><tr>
      <td>사택 단위금</td>
      <td><input type="text" name="per_money", value="<%=Config.find_by_id(8).cost %>"></td>
    </tr>
    </tbody>
  </table>

  <br>
  <button class="btn-sm" type="submit">수정</button>

<% end %>



