<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p class="notice"><%= message %></p>
  </div>
<% end %>
<h1>설정</h1>
<br>
<div class="grid simple">
  <div class="grid-body">
    <br>
      <table class="table table-hover no-more-tables" style="margin-top: 20px;">
        <thead>
        <tr>
          <th class="h-align">품목</th>
          <th class="h-align">가격</th>
        </tr>
        </thead>
        <tbody>
        <% @config.each do |config| %>
          <tr>
            <td><%= change_name(config.id) %></td>
            <td><%=number_with_delimiter(config.cost) %></td>
          </tr>
        <% end %>
          <tr>
            <td>변경 날짜</td>
            <td><%= @config.first.updated_at%></td>
          </tr>
        </tbody>
      </table>
      <br>
          <button class="btn-sm">
            <%= link_to '수정', edit_config_path %>
          </button>
  </div>
</div>

<script>
    $(document).ready(function () {
        $(".config").addClass("active");
    })



</script>