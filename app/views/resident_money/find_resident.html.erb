<style>
  table thead tr th {
    text-align: center;
  }

  table tbody tr td {
    text-align: center;
  }

  table tr.linkable {
    cursor: pointer;
  }
  select {
    width: 70px;
    background-color: #ffffff;
    background-image: none !important;
    border: 1px solid #e5e5e5;
    outline: none;
    min-height: 35px;
  }
</style>

<h1>입주자 수금내역</h1>
<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p class="notice"><%= message %></p>
  </div>
<% end %>
<br>
<div class="grid simple">
  <div class="grid-body">
    <div class="panel panel-primary">
      <div class="panel-heading">검색</div>
      <div class="panel-body">
        <div class="col-md-3">
          <%= form_tag resident_money_find_resident_path, method: :get, class: 'form-inline search-user-form' do %>
            <div class="input-group align-center">
              <%= text_field_tag 'name', nil, class: 'form-control', placeholder: '이름 검색' %>
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <table class="table table-hover no-more-tables" style="margin-top: 20px;">
      <thead>
      <tr>
        <th class="h-align">동</th>
        <th class="h-align">호</th>
        <th class="h-align">이름</th>
        <th class="h-align">달</th>
        <th class="h-align">금액</th>
        <th class="h-align">수금 날짜</th>
      </tr>
      </thead>
      <tbody>
      <% @resident_monies.each do |resident_money| %>
        <tr>
          <td><%= resident_money.dong %></td>
          <td><%= resident_money.ho %></td>
          <td><%= resident_money.name %></td>
          <td><%= resident_money.month %></td>
          <td><%= number_with_delimiter(resident_money.money) %></td>
          <td><%= resident_money.date %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <br>
  </div>

</div>


<script>
    $(document).ready(function () {
        $(".resident").addClass("active");
        $(".resi").find('li').last().addClass("active");
    })
</script>

