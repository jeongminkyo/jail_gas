<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p class="notice"><%= message %></p>
  </div>
<% end %>
<h1>월별 수금 내역 추가</h1>
<br>
<div class="grid simple">
  <div class="grid-body">
    <div class="panel-body">
      <div class="col-md-3">
        <%= form_tag resident_money_new_path, method: :get, class: 'form-inline search-user-form' do %>
          <div class="input-group align-center" style="width: 100%; display:inline-flex">
            <%= select_tag(:select_month, options_for_select(select_box_month, @month), {:class => 'form-control' })  %>
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="grid-body">
      <h3><%= @month %>월</h3>
      <br>
      <%= form_tag resident_money_path(select_month: @month), method: :post, class: 'form-inline search-user-form' do %>
        <table class="table table-hover no-more-tables" style="margin-top: 20px;">
          <thead>
          <tr>
            <th class="h-align">동</th>
            <th class="h-align">호수</th>
            <th class="h-align">이름</th>
            <th class="h-align">금액</th>
            <th class="h-align">날짜</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <% @resident_money.each do |row| %>
              <td><%= row.dong %></td>
              <td><%= row.ho %></td>
              <td><%= row.name %></td>
              <% if row.money.present? && row.date.present? %>
                <td><%= number_with_delimiter(row.money) %></td>
                <td><%= row.date %></td>
              <% else %>
                <td><input type="text" class="form-control" style="width:100px" value="<%= row.money %>" name="resident_money[<%= row.id %>][]"></td>
                <td><input type="text" class="form-control money_date" style="width:100px" value="<%= row.date %>" name="resident_money[<%= row.id %>][]" id="money_date_<%= row.id%>"></td>
              <% end %>
              </tr>
            <% end %>
            </tbody>
        </table>
        <br>
        <button class="btn-sm" type="submit">추가</button>
        <button class="btn-sm" onclick="location.href='<%= resident_money_path %>'">
          뒤로
        </button>
      <% end %>
    </div>
  </div>
</div>

<script>
    $(document).ready(function () {
        $(".resident").addClass("active");
        $(".resi").find('li').eq(1).addClass("active");
    })

    $(".money_date").each(function(){
        $(this).datepicker({
            dateFormat: 'yy-mm-dd'
        });
    });

</script>

