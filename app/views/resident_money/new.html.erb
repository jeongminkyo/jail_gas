<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p class="notice"><%= message %></p>
  </div>
<% end %>
<h1>월별 수금 내역 New</h1>
<br>
<div class="grid simple">
  <div class="grid-body">
    <div class="panel-body">
      <div class="col-md-3">
        <%= form_tag edit_company_housing_path, method: :get, class: 'form-inline search-user-form' do %>
          <div class="input-group align-center" style="width: 140%; display:inline-flex">
            <%= select_tag(:select_dong, options_for_select(select_box_dong), {:class => 'form-control', :style => 'margin-right: 20px'})  %>
            <%= select_tag(:select_month, options_for_select(select_box_month), {:class => 'form-control', :style => 'margin-right: 5px'})  %>
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="grid-body">
      <br>
      <%= form_tag resident_money_path, method: :post, class: 'form-inline search-user-form' do %>
        <table class="table table-hover no-more-tables" style="margin-top: 20px;">
          <thead>
          <tr>
            <th class="h-align">동</th>
            <th class="h-align">호수</th>
            <th class="h-align">이름</th>
            <th class="h-align">금액</th>
            <th class="h-align">날짜</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <% @resident_money.each do |row| %>
              <td><%= row.dong %></td>
              <td><%= row.ho %></td>
              <td><%= row.name %></td>
              <td><input type="text" class="form-control" style="width:60px" name="id[<%=row.id%>]"></td>
              <td><input type="text" class="form-control" style="width:60px" name="id[<%=row.id%>]"></td>
              </tr>
            <% end %>
            </tbody>
        </table>
        <br>
        <button class="btn-sm" type="submit">추가</button>
        <button class="btn-sm">
          <%= link_to '뒤로', resident_money_path %>
        </button>
      <% end %>
    </div>
  </div>
</div>

<script>
    $(document).ready(function () {
        $('table td').click(function(){
            window.location = $(this).parent().data('href');
            return false;
        });

        $('[data-toggle="tooltip"]').tooltip();
        $(".resident").addClass("active");
        $(".resi").find('li').last().addClass("active");
    })
</script>

