<h1>창고현황</h1>
<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p class="notice"><%= message %></p>
  </div>
<% end %>
<br>
<%= form_tag warehouse_update_path(), method: :put, class: 'form-inline' do %>
  <table class="table table-hover no-more-tables" style="margin-top: 80px;">
    <thead>
    <tr>
      <th class="h-align">품 목</th>
      <th class="h-align">개 수</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td>날짜</td>
      <td><input type="text" name="date" id="date", value="<%= @warehouse.date %>"></td>
    </tr>
    <tr>
      <td>10kg</td>
      <td><input type="text" name="gas_10kg", value="<%= @warehouse.gas_10kg %>"></td>
    </tr>
    <tr>
      <td>20kg</td>
      <td><input type="text" name="gas_20kg", value="<%= @warehouse.gas_20kg %>"></td>
    </tr>
    <tr>
      <td>50kg</td>
      <td><input type="text" name="gas_50kg", value="<%= @warehouse.gas_50kg %>"></td>
    </tr>
    <tr>
      <td>산소</td>
      <td><input type="text" name="air", value="<%= @warehouse.air %>"></td>
    </tr>
    <tr>
      <td>부탄</td>
      <td><input type="text" name="butane", value="<%= @warehouse.butane %>"></td>
    </tr>
    <tr>
      <td>아르곤</td>
      <td><input type="text" name="argon", value="<%= @warehouse.argon %>"></td>
    </tr>
    <tr>
      <td>입고/출고</td>
      <td><%= select_tag 'status', options_for_select([['입고',0],['출고',1]])  %></td>
    </tr>
    <tr>
      <td>담당자</td>
      <td><%= select_tag 'manager', options_for_select(['정연혁','최득섭','한성'])  %></td>
    </tr>
    </tbody>
  </table>
  <br>
  <button class="btn-sm" type="submit" style="float : right">수정</button>
<% end %>
<div class="col-md-12">
  <div style="margin-top: 8px; text-align: center; ">

  </div>
</div>

<script>
    $(function() {
        $( "#date" ).datepicker({
            dateFormat: 'yy-mm-dd'
        });
    });
    $(".warehouse").addClass("active");
</script>